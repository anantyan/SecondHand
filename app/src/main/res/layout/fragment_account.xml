<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.account.AccountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_masuk"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:text="Masuk"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="16dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_version_account"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_image_account" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_image_account"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="24dp"
                app:riv_corner_radius="16dp"
                android:src="@drawable/ic_profile_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_edit_account"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="38dp"
                android:src="@drawable/ic_round_edit_24"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_image_account" />

            <TextView
                android:id="@+id/tv_edit_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:text="Ubah Akun"
                android:textSize="18sp"
                android:visibility="invisible"
                app:layout_constraintLeft_toRightOf="@id/iv_edit_account"
                app:layout_constraintTop_toTopOf="@id/iv_edit_account" />

            <View
                android:id="@+id/view_edit"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="21dp"
                android:background="#E5E5E5"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_edit_account" />

            <ImageView
                android:id="@+id/iv_option_account"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/ic_round_settings_24"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_edit" />

            <TextView
                android:id="@+id/tv_option_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:text="Pengaturan"
                android:textSize="18sp"
                android:visibility="invisible"
                app:layout_constraintLeft_toRightOf="@id/iv_option_account"
                app:layout_constraintTop_toTopOf="@id/iv_option_account" />

            <View
                android:id="@+id/view_option"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="21dp"
                android:background="#E5E5E5"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_option_account" />

            <ImageView
                android:id="@+id/iv_logout_account"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_round_logout_24"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_option" />

            <TextView
                android:id="@+id/tv_logout_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:text="Keluar"
                android:textSize="18sp"
                android:visibility="invisible"
                app:layout_constraintLeft_toRightOf="@id/iv_logout_account"
                app:layout_constraintTop_toTopOf="@id/iv_logout_account" />

            <View
                android:id="@+id/view_logout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="21dp"
                android:background="#E5E5E5"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_logout_account" />

            <TextView
                android:id="@+id/tv_version_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="21dp"
                android:text="Version 1.0.0"
                android:textColor="#8A8A8A"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_logout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>